<Window x:Class="Hello_Kitty_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello_Kitty_Calculator"
        xmlns:vm="clr-namespace:Hello_Kitty_Calculator.ViewModel"
        mc:Ignorable="d"
        Title="Hello Kitty Calculator" Height="800" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Border CornerRadius="30" Background="Pink" BorderBrush="Black" BorderThickness="2" SnapsToDevicePixels="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="1"/>
        </Border.Effect>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border BorderThickness="1" CornerRadius="30" BorderBrush="Black" Background="Black">
                
            </Border>

            <Grid Grid.Row="1" Margin="0 10 0 0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- First Line of Buttons   -->
                <Button Content="AC" />
                <Button Content="±" Grid.Column="1"/>
                <Button Content="%" Grid.Column="2"/>
                <Button Content="÷" Grid.Column="3"/>

                <!-- Second Line of Buttons   -->
                <Button Content="7" Grid.Row="1"/>
                <Button Content="8" Grid.Row="1" Grid.Column="1"/>
                <Button Content="9" Grid.Row="1" Grid.Column="2"/>
                <Button Content="x" Grid.Row="1" Grid.Column="3"/>

                <!-- Third Line of Buttons   -->
                <Button Content="4" Grid.Row="2"/>
                <Button Content="5" Grid.Row="2" Grid.Column="1"/>
                <Button Content="6" Grid.Row="2" Grid.Column="2"/>
                <Button Content="-" Grid.Row="2" Grid.Column="3"/>

                <!-- Third Line of Buttons   -->
                <Button Content="1" Grid.Row="3"/>
                <Button Content="2" Grid.Row="3" Grid.Column="1"/>
                <Button Content="3" Grid.Row="3" Grid.Column="2"/>
                <Button Content="+" Grid.Row="3" Grid.Column="3"/>

                <!-- Third Line of Buttons   -->
                <Button Grid.ColumnSpan="2" Content="0"  Grid.Row="4" Grid.Column="0"/>
                <Button Content="," Grid.Row="4" Grid.Column="2"/>
                <Button Content="=" Grid.Row="4" Grid.Column="3"/>

            </Grid>
        </Grid>

    </Border>
</Window>
